---
interface Props {
  tagline?: string;
  align?: "start" | "center";
}

const { align = "center", tagline } = Astro.props;
---

<header class:list={["hero stack gap-8", align]}>
  <div class="stack gap-8">
    <h1 class="title">
      Hola mi nombre es <span class="name-title">Jairo Vera</span>
    </h1>
    <!-- AÃ±adir efecto maquina de escribir (freelancer, ingeniero de sistemas, frontend) -->
    {tagline && <p class="tagline">{tagline}</p>}
  </div>
  <slot />
</header>

<style>
  .hero {
    font-size: var(--text-lg);
    text-align: center;
  }

  .title,
  .tagline {
    max-width: 37ch;
    margin-inline: auto;
  }

  .tagline {
    opacity: 0.75;
  }
  .title {
    font-size: var(--text-3xl);
    color: var(--gray-50);
  }
  .name-title {
    color: var(--accent-regular);
  }
  @media (min-width: 50em) {
    .hero {
      font-size: var(--text-xl);
    }

    .start {
      text-align: start;
    }

    .start .title,
    .start .tagline {
      margin-inline: unset;
    }

    .title {
      font-size: var(--text-5xl);
    }
  }
</style>
